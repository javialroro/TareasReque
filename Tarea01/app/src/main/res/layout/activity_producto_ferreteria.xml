<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductoFerreteria">

    <ScrollView
        android:layout_width="407dp"
        android:layout_height="467dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prodPorFerretxt"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:text="TextView" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/consultar1"
        android:layout_width="414dp"
        android:layout_height="48dp"
        android:onClick="consultarProductosPorFerreteria1"
        android:text="Consultar Ferreteria 1" />

    <Button
        android:id="@+id/consultar2"
        android:layout_width="410dp"
        android:layout_height="43dp"
        android:onClick="consultarProductosPorFerreteria2"
        android:text="Consultar Ferreteria 2" />

    <Button
        android:id="@+id/consultar3"
        android:layout_width="407dp"
        android:layout_height="51dp"
        android:onClick="consultarProductosPorFerreteria3"
        android:text="Consultar Ferreteria 3" />
</LinearLayout>